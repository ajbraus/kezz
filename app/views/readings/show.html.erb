<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @reading.title %>
</p>

<p>
  <b>Library:</b>
  <%= @reading.library.name %>
</p>

<p>

<b>Author:</b>
  <%= @reading.author %>
</p>

<p>
  <b>Summary:</b>
  <%= @reading.summary %>
</p>

<section>
  <% @reading_puzzle.each do |p| %>
    <p id="paragraph_<%= p.id %>"><span class="handle">[P]</span>
    <% p.sentances.each do |s| %>
      <span id="sentance_<%= s.id %>"><span class="handle">[S]</span>
      <% s.phrases.each do |ph| %>
        <span id="phrase_<%= ph.id %>">
          <span class="handle">[Ph]</span>
          <%= ph.text %>
        </span>
      <% end %>
      </span>
    <% end %>
    </p>
  <% end %>
</section>


            <% if false %>
            <%= sortable_element('phrases', :url => 'sort_phrases_path') %>
          </span>
          <%= sortable_element('sentances', :url => 'sort_sentances_path') %>
        </p>
        <%= sortable_element('paragraphs', :url => 'sort_paragraphs_path') %>
            <% end %>


<p>
  <b>Rating:</b>
  <%= @reading.rating %>
</p>

<% if current_user.id == @reading.library.user_id %>
  <%= link_to 'Edit', edit_library_reading_path(@reading) %> |
<% end %>

