<% if @ids[0].any? %>
	<% @ids[0].each do |red| %>
		//$("#<%= red %>").children('u').effect("highlight", { color:"red" }, 10000);
		$("#<%= red %>").children('u').css("background", "red");
		$(".bar[name='<%= red %>']").css("background", "red");
	<% end %>
<% end %>

<% if @ids[1].any? %>
	<% @ids[1].each do |yellow| %>
		//$("#<%= yellow %>").children('u').effect("highlight", { color:"yellow" }, 10000);
		$("#<%= yellow %>").children('u').css("background", "orange");
		$(".bar[name='<%= yellow %>']").css("background", "orange");
	<% end %>
<% end %>

<% if @ids[2].any? %>
	<% @ids[2].each do |green| %>
		//$("#<%= green %>").children('u').effect("highlight", { color:"green" }, 10000);
		$("#<%= green %>").children('u').css("background", "green");
		$(".bar[name='<%= green %>']").css("background", "green");
	<% end %>
<% end %>

<% if @ids[0].none? && @ids[1].none? %>
	$('.fiero').show();
<% end %>