<%= form_for(@library) do |f| %>
  <% if @library.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
      <% @library.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, "Library Name:" %>
    <%= f.text_field :name, class:"form-control" %>
  </p>
  <p>
    <%= f.label :img_url, "URL for Library's Image" %>
    <%= f.text_field :img_url, class:"form-control" %>
  </p>
  <p>
    <%= f.label :description, "Library Description:" %>
    <%= f.text_area :description, rows: 3, class:"form-control" %>
  </p>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
