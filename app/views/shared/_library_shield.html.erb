<div class="media">
	<%= link_to library do %>
    <img class="media-object" src="<%= library.img_url %>"/>
  <div class="media-body">
    <h4 class="media-heading"><%= library.name %></h4>
    <i><%= library.creator.name %></i><br>
    <%= library.description %>
	<% end %> 		
		<div class="pull-right">  
		  <% if user_signed_in? %>
		  	<% if current_user = library.creator %>
		  		<%= link_to 'Edit', edit_library_path(library), class:"btn btn-warning" %>
		  		<%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
				<% end %>
			<% end %>
		</div>
    <!-- Nested media object -->
<!--     <div class="media">
      ...
    </div> -->
  </div>
</div>