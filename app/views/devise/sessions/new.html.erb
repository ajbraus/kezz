<div class="col-sm-6 col-sm-offset-3">
  <br>
  <legend>Login</legend>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class:'form-horizontal') do |f| %>
    
    <div class="control-group">
    	<%= f.label :email, class:"control-label" %>
    	<div class="controls">
    		<%= f.email_field :email, class:"form-control" %>
    	</div>
  	</div>

    <div><%= f.label :password %>
    <%= f.password_field :password, class:"form-control" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class='text-right'><%= f.check_box :remember_me, checked:true %> <%= f.label :remember_me %></div>
    <% end -%>

    <div class="text-right"><%= f.submit "Sign in", class:"btn btn-primary btn-lg" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>