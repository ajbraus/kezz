<div class="col-sm-6 col-sm-offset-3">
  <br>
  <legend>Create Profile</legend>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %></div>

    <div><%= f.label :email %>
    <%= f.email_field :email, class:"form-control" %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password, class:"form-control" %></div>

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:"form-control" %></div>
<br>
    <div class='text-right'><%= f.submit "Sign up", class: "btn btn-success btn-lg" %></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>